<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Main.Search">

    <LinearLayout
        android:id="@+id/linearr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/NewUMarketDarkBlue"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/search_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription" />

        <AutoCompleteTextView
            android:id="@+id/txtSearch"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_search"
            android:drawableTint="@color/NewUMarketlight"
            android:focusedByDefault="true"
            android:fontFamily="@font/moon_light"
            android:hint="Search Here"
            android:padding="10dp"

            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true"
            />

<!--        <Button-->
<!--            android:id="@+id/button"-->
<!--            android:layout_width="55dp"-->
<!--            android:layout_height="52dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_gravity="end"-->
<!--            android:elevation="10dp"-->
<!--            android:text="Button" />-->

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearr"
        android:layout_marginTop="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="NestedScrolling" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>