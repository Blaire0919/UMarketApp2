<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartitemcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginBottom="15dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/NewUMarketlight"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/torate_sellername"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_weight="18"
                android:fontFamily="@font/moon_light"
                android:text="Seller's Name"
                android:textColor="@color/black"
                android:textSize="17sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">


            <LinearLayout
                android:id="@+id/lin_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/torate_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/corner_layouts"
                    android:src="@drawable/profile_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/lin_01"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/lin_01"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/torate_prodname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/moon_light"
                        android:maxLength="50"
                        android:text="Item name"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/torate_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/moon_light"
                            android:text="0.00"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/torate_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/moon_light"
                            android:maxLength="4"
                            android:gravity="end"
                            android:layout_marginTop="5dp"
                            android:text="(0)"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="5dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_rateproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:clickable="true"
                        android:elevation="8dp"
                        android:backgroundTint="@color/NewUMarketDarkBlue"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:strokeColor="@color/grey_font"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/moon_light"
                                android:padding="5dp"
                                android:gravity="center"
                                android:text="Rate product"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                tools:ignore="SmallSp" />

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_02"
                android:layout_alignStart="@id/lin_02"
                android:layout_alignEnd="@id/lin_02" />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>