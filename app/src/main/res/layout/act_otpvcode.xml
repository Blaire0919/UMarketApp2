<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Main.OTPVerificationCode">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:src="@mipmap/logo_um_foreground" />

    <TextView
        android:id="@+id/textheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo1"
        android:fontFamily="@font/moon_light"
        android:gravity="center"
        android:text="Enter The OTP Which You Received"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etgetotp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textheading"
        android:layout_marginStart="120dp"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:layout_marginEnd="120dp"
        android:fontFamily="@font/moon_light"
        android:hint="Enter The OTP Here"
        android:inputType="number"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/changenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etgetotp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/moon_light"
        android:gravity="center"
        android:text="Didn't Recieve? Change Your Number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnverifyotp"
        style="@style/ButtonStyle01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changenumber"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/corner_layouts"
        android:elevation="1dp"
        android:fontFamily="@font/moon_light"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Verify OTP"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/progressbarofotpauth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnverifyotp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />

</RelativeLayout>