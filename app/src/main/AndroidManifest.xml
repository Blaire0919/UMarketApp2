<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="bbc.umarket.umarketapp2">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_umlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_umlogo_round"
        android:supportsRtl="true"
        android:theme="@style/SplashScreenTheme"
        tools:ignore="AllowBackup">
        <activity
            android:name=".RateAndReview"
            android:exported="false" />
        <activity
            android:name=".SellerCenter"
            android:exported="false" />
        <activity
            android:name=".SearchedListing"
            android:exported="false" />
        <activity
            android:name=".CategorizedListing"
            android:exported="true" />
        <activity
            android:name=".AddListing"
            android:exported="true" />
        <activity
            android:name=".Settings"
            android:exported="true" />
        <activity
            android:name=".ProductDetails"
            android:exported="true" />
        <activity
            android:name=".EditProfile"
            android:exported="true" />
        <activity
            android:name=".HomeContainer"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Register"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>